<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_address_name"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_address_phone"
        android:textSize="25sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RelativeOverlap,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_address_name"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_address_options"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_address_detail"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_address_default"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textColor="#FF0202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
<View
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
    </LinearLayout>

</RelativeLayout>
