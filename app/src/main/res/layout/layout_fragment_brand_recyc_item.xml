<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/iv_fragment_brand_recyc_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv1_fragment_brand_recyc_item"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/tv1_fragment_brand_recyc_item"
        android:id="@+id/tv2_fragment_brand_recyc_item"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/tv1_fragment_brand_recyc_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
